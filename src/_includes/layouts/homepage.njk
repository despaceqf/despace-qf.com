{% extends "base.njk" %}

{% block content %}

    <section class="site-hero">
      <div class="container">
        <div class="row">
          <div class="col-lg-10 mx-auto">
            <div class="site-hero-content text-center">
              <h1>
                {{hero.title.firstPara}}
              </h1>
              <h4>{{hero.subTitle}}</h4>
    			Current Round Contract Address: <a href="{{hero.connectBtn.link}}">{{round_id}}</a>
              <p>
                {{hero.title.abstract}}
              </p>

              <ul class="site-hero-content-buttons">
                <li>
                  <a href="{{hero.seeWorkBtn.link}}" class="btn btn-secondary scroll-to">
                    <span class="btn-area">
                      <span data-text="{{hero.seeWorkBtn.text}}">
                        {{hero.seeWorkBtn.text}}
                      </span>
                    </span>
                  </a>
                </li>
                <li>
                  <a href="{{hero.connectBtn.link}}" class="btn btn-primary">
                    <span class="btn-area">
                      <span data-text="{{hero.connectBtn.text}}">
                        {{hero.connectBtn.text}}
                      </span>
                    </span>
                  </a>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
      <a href="#counter" class="site-hero-scroll scroll-to">
        <img src="/assets/images/arrow-down.svg" alt="arrow-down">
      </a>
    </section>

    <section class="site-counter" id="counter">
      <div class="container">
        <div class="row">
          <div class="col-12">
            <div class="section-title">
              <h2 class="text-white">{{achieve.title}}</h2>
            </div>
          </div>
          {% for achievement in achieve.achievements %}
          <div class="col-lg-3 col-md-6">
            <div class="site-counter-item">
              <span class="site-counter-item-title">{{achievement.title}}</span>
              <h3 class="site-counter-item-number">{{achievement.counter}}+</h3>
            </div>
          </div> 
          {% endfor %}
        </div>
      </div>
    </section>

    <section class="site-content" id="indexcontent">
      <div class="container">
		{{ content | safe }}
        <div class="row">
          <div class="col-12 text-center text-lg-left">
            <a href="{{howitworks.seeAllbtn.link}}" class="site-project-cta">{{howitworks.seeAllbtn.text}}</a>
          </div>
        </div>
      </div>
	</section>

    <section class="site-project" id="project">
      <div class="container">
        <div class="row">
          <div class="col-12">
            <div class="section-title">
              <h2>{{portfolio.subTitle}}</h2>
              <p>{{portfolio.title}}</p>
            </div>
          </div>
          {% for portfolio in collections.portfolios %}
          <div class="col-lg-4 col-md-10 mx-auto">
            <div class="site-project-item">
              <div class="site-project-item-thumb">
                <img src="{{portfolio.data.img}}" alt="project-thumb">
              </div>
              <div class="site-project-item-content">
                <span>{{portfolio.data.subTitle}}</span>
                <h3>{{portfolio.data.title}}</h3>
                <a href="{{portfolio.data.page.url}}" class="read-more">{{portfolio.data.linkText}}</a>
              </div>
            </div>
          </div>
          {% endfor %}
          <div class="col-12 text-center text-lg-left">
            <a href="/{{portfolio.seeAllbtn.link}}" class="site-project-cta">{{portfolio.seeAllbtn.text}}</a>
          </div>
        </div>
      </div>
    </section>

    <section class="site-team">
      <div class="container">
        <div class="row">
          <div class="col-12">
            <div class="section-title">
              <h2>
                {{team.title}}
              </h2>
              <h4>
                {{team.subtitle}}
              </h4>
            </div>
          </div>
          {% for teamMember in team.teamMembers %}
          <div class="col-lg-4 col-md-6">
            <div class="site-team-member">
              <div class="site-team-member-image">
                <img src="{{teamMember.img}}" alt="team-member">
              </div>
              <div class="site-team-member-content">
                <h3>{{teamMember.name}}</h3>
                <p>{{teamMember.dig}}</p>
                <p>{{teamMember.comment}}</p>
				
                <ul class="site-team-member-social">
                  {% for social in teamMember.social %}
                  <li>
                    <a href="{{social.link}}">
                      <i class="fa fa-{{social.icon}}"></i>
                    </a>
                  </li> 
                  {% endfor %}
                </ul>
              </div>
            </div>
          </div> 
          {% endfor %}
        </div>
      </div>
    </section>
  
{% endblock %}
